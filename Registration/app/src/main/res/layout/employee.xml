<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Notification Button (Top-Right Corner) -->
    <Button
        android:id="@+id/notificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#6A4EA0"
        android:text="Notifications"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Section for Other Buttons -->
    <LinearLayout
        android:id="@+id/bottomButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/jobHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#6A4EA0"
            android:text="View Job History"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnViewPreferredJobs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#6A4EA0"
            android:text="View Preferred Jobs"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnSavePreferredJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#6A4EA0"
            android:text="Save Preferred Job"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnViewAppliedJobs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#6A4EA0"
            android:text="View Applied Jobs"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/ViewMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#6A4EA0"
            android:text="View Map"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/jobApplyingButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#6A4EA0"
            android:text="Job Listing"
            android:textColor="#FFFFFF" />

        <!-- Checkbox for Job Alerts -->
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Enable Job Alerts" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
